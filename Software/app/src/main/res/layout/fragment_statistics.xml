<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StatisticsFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistika"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textAlignment="center" />



    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odrađeni sati:"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/months_spinner"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_hours_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="59dp"
        app:layout_constraintTop_toBottomOf="@id/months_spinner"
        app:layout_constraintStart_toEndOf="@id/label1"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prekovremeni:"
        app:layout_constraintTop_toBottomOf="@id/label1"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_overtime_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        app:layout_constraintTop_toBottomOf="@id/label1"
        app:layout_constraintStart_toEndOf="@id/label2"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/label3"
        android:layout_width="136dp"
        android:layout_height="52dp"
        android:text="Nedjeljom/noćnom smjenom:"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label2" />

    <TextView
        android:id="@+id/tv_sunday_or_night_shift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/label2"
        app:layout_constraintStart_toEndOf="@id/label3"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <Spinner
        android:id="@+id/months_spinner"
        android:layout_width="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68"
        android:layout_marginTop="100dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>